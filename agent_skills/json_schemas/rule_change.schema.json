{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rule Change Schema",
  "description": "Schema for triage rule configuration changes",
  "type": "object",
  "required": ["id", "name", "stage", "description", "when", "action"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[ESBTCP]-[A-Z0-9-]+$",
      "description": "Rule identifier (e.g., E-FEE-001, T-DEAD-PAST-001, S-SCAM-001, B-COUNTRY-UNK-001, C-INFO-001, P-TARGET-001)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable rule name"
    },
    "stage": {
      "type": "string",
      "enum": ["eligibility", "triage", "scoring", "timeline", "trust", "content", "link_health", "effort"],
      "description": "Pipeline stage where rule is applied"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what the rule checks"
    },
    "when": {
      "type": "object",
      "description": "Rule condition specification",
      "properties": {
        "any_regex": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of regex patterns (match if any matches)"
        },
        "not_any_regex": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of regex patterns (match if none match)"
        },
        "all_regex": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of regex patterns (match if all match)"
        },
        "deadline": {
          "type": "object",
          "description": "Deadline-based condition",
          "properties": {
            "lt_today": {
              "type": "boolean",
              "description": "Deadline is less than today"
            },
            "is_null": {
              "type": "boolean",
              "description": "Deadline is null/empty"
            },
            "gt_study_start": {
              "type": "boolean",
              "description": "Deadline is greater than study start date"
            },
            "safety_margin_days": {
              "type": "integer",
              "description": "Days before study start to reject (default: 60)"
            }
          }
        },
        "http_status": {
          "type": "object",
          "description": "HTTP status condition",
          "properties": {
            "any_of": {
              "type": "array",
              "items": {
                "type": "integer"
              },
              "description": "Match if HTTP status is any of these values"
            }
          }
        },
        "effort_score": {
          "type": "object",
          "description": "Effort score condition",
          "properties": {
            "gt": {
              "type": "integer",
              "description": "Effort score greater than this value"
            }
          }
        },
        "is_taiwan_eligible": {
          "oneOf": [
            {"type": "boolean"},
            {"type": "string", "enum": ["unknown"]}
          ],
          "description": "Taiwan eligibility gate (bool or 'unknown')"
        },
        "is_directory_page": {
          "type": "boolean",
          "description": "Directory/index page gate - skip rules for discovery pages"
        },
        "trust_tier": {
          "type": "string",
          "enum": ["S", "A", "B", "C"],
          "description": "Required trust tier"
        }
      }
    },
    "action": {
      "type": "object",
      "required": ["bucket"],
      "properties": {
        "bucket": {
          "type": "string",
          "enum": ["A", "B", "C", "X"],
          "description": "Target bucket for this rule"
        },
        "reason": {
          "type": "string",
          "description": "Human-readable rejection/reason message"
        },
        "score_add": {
          "type": "integer",
          "description": "Score adjustment (positive scoring rules only)"
        },
        "effort_reduce": {
          "type": "integer",
          "description": "Effort score reduction"
        },
        "add_to_watchlist": {
          "type": "boolean",
          "description": "Whether to add lead to watchlist",
          "default": false
        }
      }
    }
  },
  "additionalProperties": false
}
